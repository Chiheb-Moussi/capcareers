{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block style %}
    <style>
        .footer {
            position: absolute;
            width: 100%;
            bottom: 0;
        }
    </style>
{% endblock %}

{% block body %}

    <div class="d-flex justify-content-center align-items-center" style="padding-top: 60px">
        <div class="col-lg-3">
            <h1 class="text-center" style="margin-bottom:40px">Connectez-vous Ã  votre compte</h1>
            {% if error %}
                <div class="alert alert-danger text-center" role="alert">
                    Mauvaises informations d'identification
                </div>
            {% endif %}
            <form action="{{ path('app_login') }}" method="post" role="form">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="form-group mt-3">
                    <input type="email" name="_username" id="email" class="form-control" placeholder="Email" required value="{{ last_username }}">
                </div>
                <div class="form-group mt-3">
                    <input type="password" name="_password" id="password"  class="form-control" placeholder="Mot de passe" required>
                </div>
                <div class="mt-3"><button class="btn btn-primary w-100" type="submit">Se connecter</button>
                    <small>Vous n'avez pas un compte? <a href="/register" >S'inscrire</a></small>
                </div>
            </form>

        </div>
    </div>


{% endblock %}