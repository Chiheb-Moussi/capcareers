<script>
    $(document).ready(function () {
        const navItems = $('#navbar li a');

        navItems.on('click', function (event) {
            // Remove the 'active' color from all items
            navItems.css('color', '#fff9');

            // Set the 'active' color to white on the clicked item
            $(this).css('color', 'white');

            const itemId = $(this).attr('id');
            localStorage.setItem('activeMenuItem', itemId);
        });

        const activeItem = localStorage.getItem('activeMenuItem');
        if (activeItem) {
            // Set the 'active' color to white on the previously selected item
            $('#' + activeItem + ' a').css('color', 'white');
        }
    });
</script>

