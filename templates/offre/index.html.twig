{% extends 'employeur/base-employeur.html.twig' %}

{% block title %}Offre index{% endblock %}

{% block content %}
    <h2>Mes offres</h2>
    <div class="table-responsive">
        <table class="table table-striped">
        <thead>
            <tr>
                <th>Intitulé du poste</th>
                <th>Secteur d'activité</th>
                <th>Profil recherché</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for offre in offres %}
            <tr>
                <td>{{ offre.titre }}</td>
                <td>{{ offre.secteur.titre }}</td>
                <td>{{ offre.profil }}</td>
                <td>
                    <a href="{{ path('app_offre_show', {'id': offre.id}) }}" class="btn btn-primary btn-sm"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('app_offre_edit', {'id': offre.id}) }}" class="btn btn-warning btn-sm"><i class="fa fa-pencil"></i></a>
                    {{ include('offre/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Pas d'offres renseignées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    <a href="{{ path('app_offre_new') }}" class="btn btn-primary">Ajouter</a>
{% endblock %}
