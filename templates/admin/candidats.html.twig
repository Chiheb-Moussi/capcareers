{% extends 'admin/adminbase.html.twig' %}

{% block title %}Candidats{% endblock %}
{% block style %}
    <link href="{{ asset('admin/vendor/datatables/dataTables.bootstrap4.min.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}

    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Candidats</h1>
        <p class="mb-4">Cette tableau affiche la liste des candidats intéressés par des offres</p>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Nom et prénom</th>
                            <th>Profession</th>
                            <th>Profil</th>
                            <th>Disponiblité</th>
                            <th>TJM/Salaire</th>
                            <th>Experience</th>
                            <th>Offre</th>
                            <th>Employeur</th>
                            <th>Match</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for line in data %}
                            <tr>
                                <td>{{ line.candidat }}</td>
                                <td>{{ line.candidat.candidatInfo.profession }}</td>
                                <td>{{ line.candidat.candidatInfo.typeProfile }}</td>
                                <td>{{ line.candidat.candidatInfo.disponibilite|date('dd/mm/yy') }}</td>
                                <td>{{ line.candidat.candidatInfo.tjm ?? intresstedOffre.candidat.candidatInfo.salaire }}</td>
                                <td>{{ line.candidat.candidatInfo.nombreExp }}</td>
                                <td>{{ line.offre.titre }}</td>
                                <td>{{ line.employeur.societe }}</td>
                                <td>{{ line.matching ? '<i class="fa fa-star text-warning"></i>' :''}}</td>
                                <td>{{ line.status|raw }}</td>
                                <td><a href="/admin/candidats/{{ line.id }}" class="btn btn-primary"><i class="fa fa-eye"></i></a></td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->

{% endblock %}
{% block scripts %}
    <!-- Page level plugins -->
    <script src="{{ asset('admin/vendor/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('admin/vendor/datatables/dataTables.bootstrap4.min.js') }}"></script>

    <!-- Page level custom scripts -->
    <script >
        $(document).ready(function() {
            $('#dataTable').DataTable({
                language: {
                    url: "/admin/datatables-fr.json"
                }
            });
        });
    </script>
{% endblock %}