{% extends 'admin/adminbase.html.twig' %}

{% block title %}Candidat{% endblock %}

{% block body %}
<div class="container-fluid">

    <!-- Page Heading -->

    <div class="container-fluid">
        <div class="row mb-4">
            <div class="col-lg-6">
                <h3>Status: {{ status|raw }}</h3>
                <h3>Match: {{ matching ? '<i class="fa fa-star text-warning"></i>' :''}}</h3>
            </div>
            <div class="col-lg-6" style="display: flex;gap: 10px;align-items: baseline;justify-content: flex-end;">
                <a class="badge badge-danger text-lg" href="?status=Refusé">Réfuser</a>
                <a class="badge badge-success text-lg" href="?status=Accepté">Accpeter</a>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800">Employeur : {{ employeur.societe }}</h1>
                </div>
                <div class="col-lg-12">
                    <div class="card mb-4">
                        <div class="card-header">
                            Employeur
                        </div>
                        <div class="card-body">
                            <div class="mb-2">
                                <strong>Employeur :</strong> {{ employeur.societe }}
                            </div>
                            <div class="mb-2">
                                <strong>Email :</strong> {{ employeur.email }}
                            </div>
                            <div class="mb-2">
                                <strong>Téléphone :</strong> {{ employeur.phone }}
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-lg-6">
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800">Candidat : {{ candidat }}</h1>
                </div>
                    <div class="col-lg-12">

                        <div class="card mb-4">
                            <div class="card-header">
                                {{ candidat.candidatInfo.profession }}
                            </div>
                            <div class="card-body">
                                <div class="mb-2">
                                    <strong>Email :</strong> {{ candidat.email }}
                                </div>
                                <div class="mb-2">
                                    <strong>Téléphone :</strong> {{ candidat.phone }}
                                </div>
                                <div class="mb-2">
                                    <strong>Profil :</strong> {{ candidat.candidatInfo.typeProfile }}
                                </div>
                                <div class="mb-2">
                                    <strong>Nombre d'experience :</strong> {{ candidat.candidatInfo.nombreExp }}
                                </div>
                                <div class="mb-2">
                                    <strong>Ville :</strong> {{ candidat.ville }}
                                </div>
                                <div class="mb-2">
                                    <strong>Type de contrat :</strong> {{ candidat.candidatInfo.typeContrat }}
                                </div>
                                <div class="mb-2">
                                    {% if candidat.candidatInfo.typeContrat =="CDI" %}
                                        <strong>Salaire :</strong> {{ candidat.candidatInfo.salaire }}
                                    {% else %}
                                        <strong>TJM :</strong> {{ candidat.candidatInfo.tjm }}
                                    {% endif %}
                                </div>
                                <div class="mb-2">
                                    <strong>Skills :</strong> {% for skill in candidat.candidatInfo.candidatInfoSkills %}
                                        <span class="badge badge-secondary text-white">{{ skill }}</span>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        <h3 class="h3 mb-4 text-gray-800">Experiences</h3>
                        {% for experience in candidat.candidatInfo.experiences %}
                        <div class="card mb-4">
                            <div class="card-header">
                                {{  experience.titre }} / {{ experience.nomEntreprise }}
                            </div>
                            <div class="card-body">
                                <div><strong>Date début :</strong> {{ experience.dateDebut|date('d/m/y') }}</div>
                                <div><strong>Date de fin :</strong> {{ experience.dateFin|date('d/m/y') }}</div>
                                <div><strong>Nombre d'Année :</strong> {{ experience.nombreAnnee }}</div>
                                <p>{{ experience.description }}</p>
                            </div>
                        </div>
                        {% endfor %}

                        <h3 class="h3 mb-4 text-gray-800">Formations</h3>
                        {% for formation in candidat.candidatInfo.formations %}
                            <div class="card mb-4">
                                <div class="card-header">
                                    {{  formation.titre }}
                                </div>
                                <div class="card-body">
                                    <div><strong>Date de formationt :</strong> {{ formation.dateFormation|date('d/m/y') }}</div>
                                    <p>{{ formation.description }}</p>
                                </div>
                            </div>
                        {% endfor %}

                    </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}

